####-------------------------------------------------------------####
#	For Pressure Gauges utilizing these channel 'signals':          #
#		ON_CMD                                                      #
#		VP_RD                                                       #
#		OK_RSTS_VP1                                                 #
#		PLC_ILKS - funnels external interlock status'...            #
#		ILK_STAS - receives interlock status' + decodes val to str  #
#	Devices using this so far:                                      #
#		PG - Pirani Gauges                                          #
#		FPG - Foreline Pirani Gauges                                #
#		CCG - Cold Cathode Gauges                                   #
####-------------------------------------------------------------####

record(bo, "$(System):$(Area)_$(BOX):$(Device)_$(Instance):ON_CMD")
{
	field(DESC, "ON Command")
	field(VAL, "1")
	field(SCAN, "Passive")
	field(OMSL, "supervisory")
	field(ONAM, "1")
	field(ZNAM, "0")
	field(PINI, "1")
}

record(calc, "$(System):$(Area)_$(BOX):$(Device)_$(Instance):VP_RD")
{
	field(DESC, "Vacuum Pressure")
	field(SCAN, "1 second")
	field(PREC, "3")
	field(EGU,  "Torr")
	field(INPA, "$(System)_$(SubSystem):$(Device)_$(Instance):VP_RD PP NMS")
	field(INPB, "$(System):$(Area)_$(BOX):$(Device)_$(Instance):ON_CMD PP NMS")
	field(CALC, "B = 0 ? 0 : A")
	field(PINI, "1")
}

record(calc, "$(System):$(Area)_$(BOX):$(Device)_$(Instance):OK_RSTS_VP1")
{
	field(DESC, "Pressure SetPoint")
	field(SCAN, "1 second")
	field(INPA, "$(System):$(Area)_$(BOX):$(Device)_$(Instance):VP_RD PP NMS")
	field(CALC, "A > 0.005 ? 0 : 1")
	field(PINI, "1")
}

record(ao, "$(System):$(Area)_$(BOX):$(Device)_$(Instance):PLC_ILKS")
{
	field(DESC, "Asserts *:ILK_STAS state")
	field(OUT, "$(System):$(Area)_$(BOX):$(Device)_$(Instance):ILK_STAS PP NMS")
}

