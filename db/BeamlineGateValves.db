####-------------------------------------------------------------####
#	For valves utilizing these channel 'signals':                   #
#		OPN_CMD                                                     #
#		LMOP_RSTS                                                   #
#		LMCL_RSTS                                                   #
#		PLC_CL - simulates closed by sending 1 to *:LMCL_RSTS       #
#		PLC_ILKS - funnels external interlock status'...            #
#		ILK_STAS - receives interlock status' + decodes val to str  #
#	Devices using this so far:                                      #
#		BGV - Beamline Gate Valves                                  #
#	NOTE: Device BGV is currently hard-coded. BGV Instance and      #
#		SubSystem macros aren't as neatly systematic as they are    #
#		with other valves                                           #
####-------------------------------------------------------------####

record(bo, "$(System):$(Area):BGV_$(Instance):OPN_CMD")
{
	field(DESC, "Open Command")
	field(VAL, "0")
	field(SCAN, "Passive")
	field(OMSL, "supervisory")
	field(ONAM, "1")
	field(ZNAM, "0")
	field(PINI, "1")
}

record(bi, "$(System):$(Area):BGV_$(Instance):LMOP_RSTS")
{
	field(DESC, "Opened Limit")
	field(SCAN, "1 second")
	field(INP, "$(System):$(Area):BGV_$(Instance):OPN_CMD PP NMS")
	field(ONAM, "1")
	field(ZNAM, "0") 
	field(PINI, "1")
}

record(bi, "$(System):$(Area):BGV_$(Instance):LMCL_RSTS")
{
	field(DESC, "Closed Limit")
	field(SCAN, "1 second")
	field(INP, "$(System):$(Area):BGV_$(Instance):PLC_CL PP NMS")
	field(ONAM, "1")
	field(ZNAM, "0")
	field(PINI, "1")
}

record(calcout, "$(System):$(Area):BGV_$(Instance):PLC_CL")
{
	field(DESC, "Calc PLC limit closed state")
	field(INPA, "$(System):$(Area):BGV_$(Instance):OPN_CMD PP NMS")
	field(CALC, "A ? 0 : 1")
	field(OOPT, "On Change")
	field(DOPT, "Use CALC")
	field(OUT, "$(System):$(Area):BGV_$(Instance):LMCL_RSTS PP NMS")
}

record(ao, "$(System):$(Area):BGV_$(Instance):PLC_ILKS")
{
	field(DESC, "Asserts *:ILK_STAS state")
	field(OUT, "$(System):$(Area):BGV_$(Instance):ILK_STAS PP NMS")
}

